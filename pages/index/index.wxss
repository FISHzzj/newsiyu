/* pages/zhibojian/index.wxss */
page {
  background: #fff !important;
}
.content{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}
.content .top{
  height: 100rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 20rpx 20rpx;
  box-sizing: border-box;


}
.content .top image{
  width: 50rpx;
  height: 50rpx;
}

.content .top .top_input{
    height: 50rpx;
    border-radius: 30rpx;
    border: 1rpx solid #FF398D;
    display: flex;
    align-items: center;
    /* justify-content: center; */
    font-size: 30rpx;
    width: 85%;
    margin: 0 20rpx;
    padding: 5rpx 5rpx;
}
.content .top .top_input input{
  width: 100%;
}

.swiper {
  width: 750rpx;
  padding: 30rpx;
}
.swiper .banner {
  width: 690rpx;
  height: 350rpx;
}
.swiper .banner .pic {
  width: 690rpx;
  height: 350rpx;
  border-radius: 20rpx;
}

.guanggao{
  margin: 20rpx;
}
.guanggao image{
  width: 100%;
  height: 180rpx;
}
.fenglei{
  margin: 20rpx;
}
.fenglei .fl_tou{
  display: flex;
  flex-direction: row;
  justify-content: space-around;

}
.fenglei .fl_tou .fl_item{
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  width: 30%;
  align-items: center;
  justify-content: center;

}
.fenglei .fl_tou .fl_item text:first-child{
  font-size: 30rpx;
  font-weight: 550;
  color: #000;
  margin-bottom: 10rpx;
  white-space: nowrap;

}
.fenglei .fl_tou .fl_item text:last-child{
  font-size: 26rpx;
  
}

.fl_active{
  color: #FF398D!important;
  font-size: 35rpx!important;
}
.fl_text_active{
  border: 1rpx solid #FF398D;
  padding: 5rpx 15rpx;
  box-sizing: border-box;
  color: #ffffff;
  background-color: #FF398D;
  font-size: 25rpx!important;
  border-radius: 30rpx;
  
}
.fenglei .fl_bottom{
  
  font-size: 30rpx;
  width: 656rpx;
  overflow: hidden;
  margin: 30rpx;
 

}
.fenglei .fl_bottom .fl_bottom_scroll{
  /* margin-bottom: 10rpx;
  margin-right: 20rpx;
  border-bottom: 1rpx solid #FF398D; */
  display: flex;
  flex-wrap: nowrap;
  overflow-y: scroll;
}
.fenglei .fl_bottom .fl_bottom_scroll view{
  margin-bottom: 10rpx;
  margin-right: 20rpx;
 
  white-space: nowrap;
}
.flb_active{
  border-bottom: 1rpx solid #FF398D;
}
.fl_bottom_bili{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  width: 100%;
  font-size: 30rpx;
  margin: 20rpx;
}
.flb_active{
  color: #FF398D;
}
.fl_shop{
  display: flex;
  flex-wrap: wrap;
  flex-direction: row;
  /* margin: 20rpx; */
  width: 100%;
  box-sizing: border-box;
  justify-content: space-between;
}
.fl_shop .fl_item_shop{
  width: 48%;

}
.fl_shop .fl_item_shop image{
  width: 345rpx;
  height: 345rpx;
  border-radius: 10rpx;
}
.fl_shop .fl_item_shop .title{
  width: 375rpx;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin-bottom: 10rpx;

}
.fl_shop .fl_item_shop .fl_item_pt{
  margin-bottom: 20rpx;
}
.fl_shop .fl_item_shop .fl_item_pt text{
  background-color: #FF398D;
  color: #ffffff;
  font-size: 22rpx;
  padding: 10rpx;
  border-radius: 5rpx;
  box-sizing: border-box;
  margin-right: 20rpx;
}
.fl_shop .fl_item_shop .fl_item_price{
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
  align-items: center;

}
.fl_shop .fl_item_shop .fl_item_price text:last-child{
  background-color: #FF398D;
  color: #fff;
  border-radius: 26rpx;
  text-align: center;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
}



